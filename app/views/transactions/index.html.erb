<%= render partial: 'navbar' %>
<div class="container">
  <div class="row">
    <div class="col-12 py-5 my-5">
      <h1>Recent Transactions </h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Sender</th>
            <th scope="col">Receiver</th>
            <th scope="col">Amount</th>
          </tr>
        </thead>
        <tbody>
          <% @transactions.each do |transaction| %>
            <tr>
              <td><%= transaction.id %></td>
              <td><%= get_user_email(transaction.sender_id) %></td>

              <td><%= get_user_email(transaction.receiver_id) %></td>
              <td class="<%= get_transaction_color(transaction.receiver_id) %>" ><%= transaction.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
